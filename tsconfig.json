{

    "compilerOptions": {
        "target": "ES5",
        "lib": ["es2016"],
        "types": ["node", "mocha", "chai"],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build"
    },
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "convertTabsToSpaces": true
    },
    "files": [
        "src/language-server.ts",
        "src/language-server-stdio.ts",
        "src/test/language-server-test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
