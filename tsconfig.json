{
  "extends": "./node_modules/@sourcegraph/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": ["src/**/*.ts"]
}
